<!-- Etiket Ekleme Modal -->
<div class="modal fade" id="addTagModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Yeni Etiket Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="tagName" class="form-label">Etiket Adı</label>
                        <input type="text" class="form-control" id="tagName" required>
                    </div>
                    <div class="mb-3">
                        <label for="tagDescription" class="form-label">Açıklama</label>
                        <textarea class="form-control" id="tagDescription" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="tagColor" class="form-label">Renk</label>
                        <select class="form-select" id="tagColor">
                            <option value="primary">Mavi</option>
                            <option value="success">Yeşil</option>
                            <option value="warning">Sarı</option>
                            <option value="danger">Kırmızı</option>
                            <option value="info">Açık Mavi</option>
                            <option value="secondary">Gri</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-primary">Kaydet</button>
            </div>
        </div>
    </div>
</div>

