@{
    ViewBag.Title = "Kullanım Şartları";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="text-center mb-5">
                <h1 class="display-5 fw-bold text-primary mb-3">Kullanım Şartları</h1>
                <p class="lead text-muted">Sitemizi kullanmadan önce lütfen okuyun</p>
                <div class="divider mb-3"></div>
                <small class="text-muted">Son güncelleme: @DateTime.Now.ToString("dd.MM.yyyy")</small>
            </div>

            <!-- Main Content -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-5">
                    <!-- Introduction -->
                    <div class="section-item mb-4">
                        <div class="section-icon">
                            <i class="fas fa-info-circle"></i>
                        </div>
                        <div class="section-content">
                            <h5>Giriş</h5>
                            <p class="text-muted">
                                Bu şartlar, Berkay Kanca Blog sitesini kullanımınızı düzenler. 
                                Siteyi kullanarak bu şartları kabul etmiş sayılırsınız.
                            </p>
                        </div>
                    </div>

                    <!-- Allowed Use -->
                    <div class="section-item mb-4">
                        <div class="section-icon">
                            <i class="fas fa-thumbs-up"></i>
                        </div>
                        <div class="section-content">
                            <h5>İzin Verilen Kullanım</h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="usage-card allowed">
                                        <h6><i class="fas fa-check text-success me-2"></i>Yapabilecekleriniz</h6>
                                        <ul class="simple-list">
                                            <li>Blog yazılarını okuma</li>
                                            <li>Yorum yapma</li>
                                            <li>İçeriği paylaşma</li>
                                            <li>Kişisel kullanım</li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="usage-card forbidden">
                                        <h6><i class="fas fa-times text-danger me-2"></i>Yapamayacaklarınız</h6>
                                        <ul class="simple-list">
                                            <li>İzinsiz kopyalama</li>
                                            <li>Spam gönderme</li>
                                            <li>Telif hakkı ihlali</li>
                                            <li>Sistem saldırısı</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Content Rules -->
                    <div class="section-item mb-4">
                        <div class="section-icon">
                            <i class="fas fa-comments"></i>
                        </div>
                        <div class="section-content">
                            <h5>İçerik Kuralları</h5>
                            <div class="rules-list">
                                <div class="rule-item">
                                    <i class="fas fa-ban text-danger"></i>
                                    <div>
                                        <strong>Yasak İçerikler:</strong>
                                        <span class="text-muted">Hakaret, nefret söylemi, spam, yasa dışı içerik</span>
                                    </div>
                                </div>
                                <div class="rule-item">
                                    <i class="fas fa-heart text-success"></i>
                                    <div>
                                        <strong>Saygılı Olun:</strong>
                                        <span class="text-muted">Diğer kullanıcılara ve yazarlara saygılı davranın</span>
                                    </div>
                                </div>
                                <div class="rule-item">
                                    <i class="fas fa-lightbulb text-info"></i>
                                    <div>
                                        <strong>Yapıcı Olun:</strong>
                                        <span class="text-muted">Eleştirilerinizin yapıcı olmasına dikkat edin</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Intellectual Property -->
                    <div class="section-item mb-4">
                        <div class="section-icon">
                            <i class="fas fa-copyright"></i>
                        </div>
                        <div class="section-content">
                            <h5>Telif Hakları</h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="copyright-card">
                                        <h6>Site İçeriği</h6>
                                        <p class="text-muted small">
                                            Tüm içerikler telif hakkı ile korunmaktadır. İzinsiz kullanım yasaktır.
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="copyright-card">
                                        <h6>Kullanıcı İçeriği</h6>
                                        <p class="text-muted small">
                                            Paylaştığınız içeriklerden siz sorumlusunuz.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Limitation -->
                    <div class="section-item mb-4">
                        <div class="section-icon">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <div class="section-content">
                            <h5>Sorumluluk Sınırı</h5>
                            <div class="limitation-notice">
                                <p class="text-muted mb-3">
                                    Site sahibi, içeriklerin doğruluğu konusunda sorumluluk kabul etmez.
                                </p>
                                <div class="limitation-list">
                                    <div class="limitation-item">
                                        <i class="fas fa-info-circle text-info"></i>
                                        <span>İçerikler bilgilendirme amaçlıdır</span>
                                    </div>
                                    <div class="limitation-item">
                                        <i class="fas fa-info-circle text-info"></i>
                                        <span>Profesyonel tavsiye yerine geçmez</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Contact Info -->
                    <div class="section-item">
                        <div class="section-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="section-content">
                            <h5>İletişim</h5>
                            <p class="text-muted mb-3">Sorularınız için bizimle iletişime geçin:</p>
                            <div class="contact-simple">
                                <span><strong>E-posta:</strong> info@berkaykanca.com</span>
                                <span><strong>Telefon:</strong> +90 (505) 618 19 06</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Acceptance Notice -->
            <div class="text-center mt-4">
                <div class="acceptance-notice">
                    <i class="fas fa-check-circle text-success"></i>
                    <span>Bu şartları okuyup anladığınızı ve kabul ettiğinizi beyan edersiniz.</span>
                </div>
            </div>

            <!-- Footer Actions -->
            <div class="text-center mt-4">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary rounded-pill px-4 me-2">
                    <i class="fas fa-home me-2"></i>Ana Sayfa
                </a>
                <a href="@Url.Action("Contact", "Home")" class="btn btn-outline-primary rounded-pill px-4">
                    <i class="fas fa-envelope me-2"></i>İletişim
                </a>
            </div>
        </div>
    </div>
</div>

